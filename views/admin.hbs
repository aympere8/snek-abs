    <h1 id="gallhdr">Add image to character gallery</h1>
    <center>
    <form id="gallgrid" action="/gallad" method="post" enctype="multipart/form-data" >
      
      
      <div>
         <label for="chcodegal"> Character code</label>
       <input id="iput" type="text" name="ch_code" id="chcodegal">
        
        </div>
        <br>
        
        <center><label id="fiplabel"><img id="fipimg" src="images/up.svg" alt="upload"><input id="fip" type="file" name="gup" id="gup"></label></center>
        <br>
        <input style="width:130px;" id="adbuttons" type="submit" value="Add to gallery">
        
    </form>
    </center>
</div>

